<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMyAds"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ads_image_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
           android:layout_marginEnd="10dp"
            android:background="@color/quantum_grey"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_image"/>

        <TextView
            android:id="@+id/home_ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ads_image_iv"
            android:maxLines="1"
            android:text="ad title"/>

        <TextView
            android:id="@+id/home_ad_discription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ads_image_iv"
            android:layout_below="@id/home_ad_title"
            android:lines="3"
            android:text="the  viwed by user it will be only there lines here rest in other fragment displaying main contetn, sjadhkjshdjgdj"
            />

        <ImageButton
            android:id="@+id/fav_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/home_ad_discription"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fav_icon"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/location_ad_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="address of ad"
            android:layout_toEndOf="@id/ads_image_iv"
            android:layout_below="@id/home_ad_discription"
            android:maxLines="1"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>